<% provide(:title, "Signup") %>

<div class="container">

  <div class="col-sm-push-4 col-sm-4">
    <% if flash.any? %>
        <div class="alert alert-danger">
          <% flash.each do |name, msg| %>
              <span><%= msg %></span>
          <% end %>
        </div>
    <% end %>
    <h3 class="text-center">Sign UP</h3>
    <%= form_for(:session, url: signup_path, class:'form-horizontal') do |f| %>

        <div class="form-group">
          <%= f.label :first_name, class: 'control-label' %>
          <%= f.text_field :first_name, value: (params[:session] && params[:session][:first_name]) ? params[:session][:first_name] : '' ,class: 'form-control' %>
          <% if(defined? @errors and @errors[:first_name])%>
            <div class="text-danger"><%= @errors[:first_name][0] %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class: 'control-label' %>
          <%= f.text_field :last_name, value: (params[:session] && params[:session][:last_name]) ? params[:session][:last_name] : '' , class: 'form-control' %>
          <% if(defined? @errors and @errors[:last_name])%>
              <div class="text-danger"><%= @errors[:last_name][0] %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, value: (params[:session] && params[:session][:email]) ? params[:session][:email] : '' ,class: 'form-control' %>
          <% if(defined? @errors and @errors[:email_address])%>
              <div class="text-danger"><%= @errors[:email_address][0] %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :user_name, class: 'control-label' %>
          <%= f.text_field :user_name, value: (params[:session] && params[:session][:user_name]) ? params[:session][:user_name] : '' ,class: 'form-control' %>
          <% if(defined? @errors and @errors[:name])%>
              <div class="text-danger"><%= @errors[:name][0] %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: ' control-label' %>
          <%= f.password_field :password, value: (params[:session] && params[:session][:password]) ? params[:session][:password] : '' , class: 'form-control' %>
          <% if(defined? @errors and @errors[:password_digest])%>
              <div class="text-danger"><%= @errors[:password_digest][0] %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :confirm_password, class: ' control-label' %>
          <%= f.password_field :confirm_password, value: (params[:session] && params[:session][:confirm_password]) ? params[:session][:confirm_password] : '' ,class: 'form-control' %>
          <% if(defined? @errors and @errors[:confirm_password])%>
              <div class="text-danger"><%= @errors[:confirm_password][0] %></div>
          <% end %>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "btn btn-primary" %>
        </div>
    <% end %>

  </div>
</div>