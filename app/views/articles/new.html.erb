<div class="container">
	<h3 class="page-header">New Article</h3>

	<% if @article && @article.errors.any? %>
	<div class="alert alert-danger">
		<% @article.errors.full_messages.each do |error| %>
		<span><%= error %></span>
		<% end %>
	</div>
	<% end %>
	<%= form_for :article, class:"form form-horizontal",  url:articles_path do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<br>
		<%= f.text_field :title, placeholder: "Enter your title...",  class:'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :text %>
		<br>
		<%= f.text_area :text, placeholder: "Enter your text here", cols: '30', rows:'10', class:'form-control' %>
	</div>
	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-primary' %>
	</div>
	<% end %>
</div>